{
  "canisters": {
    "backend": {
      "main": "src/backend/main.mo",
      "type": "motoko",
      "declarations": {
        "node_compatibility": true
      }
    },
    "frontend": {
      "dependencies": [
        "backend",
        "internet_identity"
      ],
      "frontend": {
        "entrypoint": "src/frontend/index.html"
      },
      "source": [
        "src/frontend/assets",
        "src/frontend/dist"
      ],
      "type": "assets"
    },
    "frontend_kids": {
      "dependencies": [
        "backend",
        "internet_identity"
      ],
      "frontend": {
        "entrypoint": "src/frontend_kids/index.html"
      },
      "source": [
        "src/frontend_kids/assets",
        "src/frontend_kids/dist"
      ],
      "type": "assets"
    },
    "internet_identity": {
      "type": "pull",
      "id": "rdmx6-jaaaa-aaaaa-aaadq-cai"
    }
  },
  "defaults": {
    "build": {
      "args": "--enhanced-orthogonal-persistence"
    }
  },
  "output_env_file": ".env",
  "version": 1,
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral"
    },
    "ic": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    },
    "staging": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    }
  }
}